@model ProductReview

<h3>@Model.Product.Name Information</h3>

<div style="display: inline">
    @using (Html.BeginForm("DeleteProduct", "Product", "Post"))
    {
        <input type="hidden" asp-for="@Model.Product.ProductId" value="@Model.Product.ProductId" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>

<table class="table">

    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>StockLevel</th>
    </tr>
    <tr>
        <td>@Model.Product.ProductId</td>
        <td>@Model.Product.Name</td>
        <td>@Model.Product.Price</td>
        <td>@Model.Product.CategoryId</td>
        <td>@Model.Product.OnSale</td>
        <td>@Model.Product.StockLevel</td>
    </tr>

</table>

<div style="display:block">
    <a href="/Product/UpdateProduct/@Model.Product.ProductId">Update this Product</a>
</div>


<table class="table">

	<tr>
		<th>Review</th>
		<th>Rating</th>
		<th>Comment</th>
	</tr>


    @foreach (var review in Model.Review)
    {   
       <tr>
            <td>@review.Reviewer</td>
            <td>@review.Rating</td>
            <td>@review.Comment</td>    
       </tr>  
    }

</table>